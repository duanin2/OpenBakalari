{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Main + renderer",
      "configurations": [
        "Main",
        "Renderer"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Renderer",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/run/current-system/sw/bin/nix",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        "develop",
        "--command",
        "electron",
        ".",
        "--remote-debugging-port=9222"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}